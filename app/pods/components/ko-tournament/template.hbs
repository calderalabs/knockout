{{#ko-header title=name}}
  <li class="ko-tournament__sort">
    {{#power-select
      class="ko-tournament__sort-select"
      searchEnabled=false
      options=sortingOptions
      selected=sortingOption
      onchange=(action "selectSortingOption") as |option|}}
      Sort by: {{option.label}}
    {{/power-select}}
  </li>

  {{#ko-header/nav-item}}
    {{#link-to "tournament" id (query-params filter=null)}}All Matches{{/link-to}}
  {{/ko-header/nav-item}}

  {{#ko-header/nav-item}}
    {{#link-to "tournament" id (query-params filter="new")}}New{{/link-to}}
  {{/ko-header/nav-item}}

  {{#ko-header/nav-item}}
    {{#link-to "tournament" id (query-params filter="unwatched")}}To Watch{{/link-to}}
  {{/ko-header/nav-item}}

  {{#ko-header/nav-item}}
    {{#link-to "tournament" id (query-params filter="saved")}}Saved{{/link-to}}
  {{/ko-header/nav-item}}
{{/ko-header}}

{{#each timeline as |day|}}
  <section class="ko-tournament__day">
    <h1 class="ko-tournament__day-title">{{day.title}}</h1>

    <ul class="ko-tournament__day-collection-list">
      {{#each day.collections as |collection|}}
        {{ko-tournament/collection-list-item collection=collection}}
      {{/each}}
    </ul>
  </section>
{{/each}}
