<article class="ko-tournament-plain-list-item__content">
  <header class="ko-tournament-plain-list-item__header">
    <div class="ko-tournament-plain-list-item__header-content">
      {{#ko-spoiler title="Show Teams" class="ko-tournament-plain-list-item__teams"}}
        {{#tool-tipster title=teamOneFullName class="ko-tournament-plain-list-item__team-name"}}
          {{teamOneShortName}}
        {{/tool-tipster}}

        <div class="ko-tournament-plain-list-item__team-separator">vs</div>

        {{#tool-tipster title=teamTwoFullName class="ko-tournament-plain-list-item__team-name"}}
          {{teamTwoShortName}}
        {{/tool-tipster}}
      {{/ko-spoiler}}

      <div class="ko-tournament-plain-list-item__stage">
        <div class="ko-tournament-plain-list-item__stage-content">
          {{stage}}
        </div>
      </div>
    </div>
  </header>

  {{ko-tournament/match-list-item
    match=match
    class="ko-tournament-plain-list-item__match-list-item"}}
</article>
