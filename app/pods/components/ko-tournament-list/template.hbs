{{#if arrangedTournaments}}
  {{#ko-header title=title}}
    {{#if shouldShowNav}}
      {{#ko-header/nav-item}}
        {{#link-to "tournaments" (query-params gameId=null)}}All Games{{/link-to}}
      {{/ko-header/nav-item}}

      {{#ko-header/nav-item}}
        {{#link-to "tournaments" (query-params gameId="dota2")}}Dota 2{{/link-to}}
      {{/ko-header/nav-item}}

      {{#ko-header/nav-item}}
        {{#link-to "tournaments" (query-params gameId="overwatch")}}Overwatch{{/link-to}}
      {{/ko-header/nav-item}}
    {{/if}}
  {{/ko-header}}

  <ul class="ko-tournament-list__content">
    {{#each arrangedTournaments as |tournament|}}
      {{#if hasBlock}}
        {{yield tournament}}
      {{else}}
        {{ko-tournament-list/item tournament=tournament}}
      {{/if}}
    {{/each}}
  </ul>
{{else}}
  {{yield to="inverse"}}
{{/if}}
