{{#link-to "tournament" tournament.id class="ko-tournament-list-item__link"}}
  <article class="ko-tournament-list-item__content">
    <h1 class="ko-tournament-list-item__name">{{tournament.name}}</h1>

    <div class="ko-tournament-list-item__stage">
      {{tournament.stage}}
    </div>

    <ul class="ko-tournament-list-item__info">
      <li class="ko-tournament-list-item__info-item ko-tournament-list-item__info-item--game">
        {{tournament.gameName}}
      </li>

      <li class="ko-tournament-list-item__info-item ko-tournament-list-item__info-item--vods">
        {{unwatchedVods.length}} unwatched
      </li>
    </ul>

    <button class="ko-tournament-list-item__star">
      <i class="ko-tournament-list-item__star-icon"></i>
    </button>
  </article>
{{/link-to}}
