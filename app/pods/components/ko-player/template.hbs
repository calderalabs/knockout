<header class="ko-player__header">
  <div class="ko-player__actions">
    <button
      class="ko-button ko-player__watch
             {{if isWatched "ko-player__watch--watched"}}
             {{if toggleWatchIsRunning "ko-player__watch--running"}}"
      onclick={{perform toggleWatch}}>
      <i class="ko-player__watch-icon"></i>Watched
    </button>
  </div>

  <h1 class="ko-player__title ko-title">
    {{#tool-tipster title=title}}
      {{teamOneFullName}} vs {{teamTwoFullName}} game {{matchNumber}}
    {{/tool-tipster}}
  </h1>

  <div class="ko-player__close">
    {{#link-to (query-params matchId=null) class="ko-link"}}Close{{/link-to}}
  </div>
</header>

<iframe class="ko-player__vod" src={{vodUrl}} width="100%" height="100%" frameborder="0" scrolling="no" allowfullscreen></iframe>
